    <script>
        // Select the input elements
        const input1 = document.getElementById('input1');
        const input2 = document.getElementById('input2');

        // Function to toggle the border of each input element
        function toggleBorders(event) {
            if (event.target === input1) {
                input1.style.borderColor = '#7b1798'; // Show border of input1
                input2.style.borderColor = ''; // Hide border of input2
            } else if (event.target === input2) {
                input1.style.borderColor = ''; // Hide border of input1
                input2.style.borderColor = '#7b1798'; // Show border of input2
            } else {
                // If clicked outside of input elements, hide borders of both inputs
                input1.style.borderColor = '';
                input2.style.borderColor = '';
            }
        }

        // Attach event listeners to the input elements
        input1.addEventListener('click', toggleBorders);
        input2.addEventListener('click', toggleBorders);

        // Attach event listener to document to hide borders when clicked anywhere else
        document.addEventListener('click', toggleBorders);
    </script>


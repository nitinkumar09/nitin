<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <!-- css link -->
    <link rel="stylesheet" href="/css/feedback.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<style>
    .zero h1 {
        font-size: 70px !important;
    }

    .home {
        font-weight: bold !important;
    }

    .home a {
        text-decoration: none;
        color: rgb(244, 244, 244);
    }

    button:hover {
        background-color: #ff2963 !important;
        color: #fff !important;
    }
</style>

<body>

    {{!-- {{>navbar}} --}}

    <div class="hero">
        <div class="container-fluid">
            <div class="row m-auto">
                <!-- <span class="name"></span> -->
                <center class="zero">
                    <h1>Hello, <span class="name"></span></h1>
                </center>
                <h1 class="thnx">You can give <span class="feedback">Feedback</span> here</h1>
                <form action="/feedback" class="form" method="POST"><textarea
                        placeholder="write anything here relevant to feedback..." class="mb-3 feed" id="myTextarea"
                        name="feed" type="feed"></textarea>
            </div>
        </div>
        <div class="container">
            <div class="row text-center m-auto ">

                <button class="" type="submit"><img src="images/play.png" alt="">Listen me</button>
                <button class="btn btn-success mx-auto home" type="submit">
                    <a href="/">Go to Home page</a>
                </button>
            </div>
        </div>
        </form>
    </div>
    <!-- js start -->
    <script src="/js/feedback.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>